package com.example.assignment3radiocheckboxes;

import android.content.Intent;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.CheckBox;
import android.widget.EditText;
import android.widget.RadioButton;
import android.widget.RadioGroup;

import androidx.activity.EdgeToEdge;
import androidx.appcompat.app.AppCompatActivity;
import androidx.core.graphics.Insets;
import androidx.core.view.ViewCompat;
import androidx.core.view.WindowInsetsCompat;

public class MainActivity extends AppCompatActivity {

    EditText medtName, medtSurname, medtXClass;
    RadioGroup mradioGroupGender;
    CheckBox mcheckReading, mcheckTravelling, mcheckGaming;
    Button mbtnSubmit;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        EdgeToEdge.enable(this);
        setContentView(R.layout.activity_main);

        ViewCompat.setOnApplyWindowInsetsListener(findViewById(R.id.main), (v, insets) -> {
            Insets systemBars = insets.getInsets(WindowInsetsCompat.Type.systemBars());
            v.setPadding(systemBars.left, systemBars.top, systemBars.right, systemBars.bottom);
            return insets;
        });

        medtName = findViewById(R.id.etName);
        medtSurname = findViewById(R.id.etSurname);
        medtXClass = findViewById(R.id.etClass);

        mradioGroupGender = findViewById(R.id.rgGender);

        mcheckReading = findViewById(R.id.cbReading);
        mcheckTravelling = findViewById(R.id.cbSports);
        mcheckGaming = findViewById(R.id.cbMusic);

        mbtnSubmit = findViewById(R.id.btnSubmit);

        mbtnSubmit.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {

                String name = medtName.getText().toString();
                String surname = medtSurname.getText().toString();
                String classname = medtXClass.getText().toString();

                int genderId = mradioGroupGender.getCheckedRadioButtonId();
                String gender = "";

                if (genderId != -1) {
                    RadioButton radioButton = findViewById(genderId);
                    gender = radioButton.getText().toString();
                }

                StringBuilder hobbiesBuilder = new StringBuilder();
                if (mcheckReading.isChecked()) hobbiesBuilder.append("Reading ");
                if (mcheckTravelling.isChecked()) hobbiesBuilder.append("Travelling ");
                if (mcheckGaming.isChecked()) hobbiesBuilder.append("Gaming ");

                Intent intent = new Intent(MainActivity.this, MainActivity2.class);
                intent.putExtra("name", name);
                intent.putExtra("surname", surname);
                intent.putExtra("studentclass", classname);
                intent.putExtra("genderkey", gender);
                intent.putExtra("hobbies", hobbiesBuilder.toString().trim());

                startActivity(intent);
            }
        });
    }
}



<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">


    <TextView
        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        />

</LinearLayout>


package com.example.assignment3radiocheckboxes;

import android.os.Bundle;
import android.widget.TextView;

import androidx.appcompat.app.AppCompatActivity;


public class MainActivity2 extends AppCompatActivity {

    TextView stxtResult;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);

        setContentView(R.layout.activity_main2);

        stxtResult = findViewById(R.id.txtResult);

        Bundle bundle = getIntent().getExtras();

            String name = bundle.getString("name");
            String surname = bundle.getString("surname");
            String studentClass = bundle.getString("studentclass");
            String gender = bundle.getString("genderkey");
            String hobbies = bundle.getString("hobbies");

            String result =
                    "Name: " + name + "\n\n" +
                            "Surname: " + surname + "\n\n" +
                            "Class: " + studentClass + "\n\n" +
                            "Gender: " + gender + "\n\n" +
                            "Hobbies: " + hobbies;

            stxtResult.setText(result);

    }
}
